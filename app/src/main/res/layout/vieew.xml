<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Row with items 1, 2, 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#304FFE"
            android:textSize="26dp"
            android:text="1"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="26dp"
            android:background="#8E24AA"
            android:text="2"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="26dp"
            android:background="#00ACC1"
            android:text="3"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Middle Section with items 4, 5, 6, 7, 8, 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="26dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <!-- Left Column for item 4 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D81B60"
            android:textSize="26dp"
            android:text="4"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <!-- Right Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- Row with items 5 and 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FF5252"
                    android:text="5"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="26dp"
                    android:background="#FF6D00"
                    android:text="6"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#43A047"
                android:text="7"
                android:gravity="center"
                android:textColor="#FFFFFF" />

            <!-- Row with items 8 and 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FF5722"
                    android:text="8"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#607D8B"
                    android:text="9"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Section with nested Alphabet items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:text="Alphabet (Nested MondrianLayout)"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <!-- Nested layout with Alphabet items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DCEDC8"
                android:text="A"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C5E1A5"
                android:text="B"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#AED581"
                android:text="C"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9CCC65"
                android:text="D"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:text="E"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
